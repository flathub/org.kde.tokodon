{
    "id": "org.kde.tokodon",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "base": "io.qt.qtwebengine.BaseApp",
    "base-version": "6.10",
    "command": "tokodon",
    "finish-args": [
        "--device=dri",
        "--env=QML_IMPORT_PATH=/app/qml",
        "--env=QT_PLUGIN_PATH=/app/plugins:/app/lib64/plugins:/app/lib/plugins:/usr/share/runtime/lib/plugins",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--talk-name=org.unifiedpush.Distributor.*",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--talk-name=org.kde.kwalletd5",
        "--talk-name=org.kde.kwalletd6"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig"
    ],
    "modules": [
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4138,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/$version.tar.gz"
                    }
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO",
                "-DBUILD_WITH_QT6=ON"
            ]
        },
        {
            "name": "MpvQt",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/mpvqt/mpvqt-1.1.1.tar.xz",
                    "sha256": "bdd1ea69338cf3017f628a886218b8c185ca24e8257f03207a3cf1bbb51e3d32",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 370634,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/mpvqt/mpvqt-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kunifiedpush",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF"
            ],
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/kunifiedpush-25.12.2.tar.xz",
                    "sha256": "e111dd53c7a77bfc32f358375b9649ed418d9c5acd9c44b95ec5a07c9c2078b9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242851,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kunifiedpush-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "tokodon",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTING=OFF",
                "-DTOKODON_FLATPAK=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/tokodon-25.12.2.tar.xz",
                    "sha256": "c84b0abc9df333060a0b44a5eed92da220869d9e37af680015d6543542bfe7ae",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 242851,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/tokodon-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
